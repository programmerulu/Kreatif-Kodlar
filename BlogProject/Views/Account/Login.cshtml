@using BlogProject.Entites
@model User
@{
    ViewData["Title"] = "Login Page";

}
<section class="p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="card border-light-subtle shadow-sm" style="background:#f5f6fa;">
            <div class="row g-0">
                <div class="col-12 col-md-6 text-bg-primary">
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="col-10 col-xl-8 py-3">
                            <img class="img-fluid rounded-circle mb-4" loading="lazy" src="~/assets/images/me.jpg" width="245" height="80" alt="BootstrapBrain Logo">

                            <hr class="border-primary-subtle mb-4">
                            <h2 class="h1 mb-4 text-mediterranean" style="font-size: 30px">I'm a focused, innovative, and open-minded developer</h2>
                            <p class="lead m-0">I'm a software developper.I've' interested a lot of programming language for years 
                                such as C#,Python,Java,Php,Javascript.I often developped projects using ASP.NET Core,Entity Framework</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">
                                    <h1 class="text-secondary">LOG IN</h1>
                                </div>
                            </div>
                        </div>
                        <form method="post" asp-action="Login" asp-controller="Account">
                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div class="col-12">
                                    <label for="mail" class="form-label">Email <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" name="mail" id="mail" placeholder="name@example.com" asp-for="Mail">
                                </div>
                                <div class="col-12">
                                    <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" name="password" id="password" value="" asp-for="Password">
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" name="remember_me" id="remember_me">
                                        <label class="form-check-label text-secondary" for="remember_me">
                                            Keep me logged in
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn bsb-btn-xl bg-mediterranean text-white" type="submit">Log in now</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-12">
                                <hr class="mt-5 mb-4 border-secondary-subtle">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                    <a asp-action="Register" asp-controller="Account" class="link-secondary text-decoration-none">Create new account</a>
                                    <a href="#!" class="link-secondary text-decoration-none">Forgot password</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>